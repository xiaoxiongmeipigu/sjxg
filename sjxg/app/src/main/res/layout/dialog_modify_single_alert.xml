<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/shop_white"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="标题"
        android:textColor="@color/shop_black"
        android:textSize="@dimen/text_big"
        android:textIsSelectable="true"
        android:lineSpacingMultiplier="1.3"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        />

    <EditText
        android:id="@+id/info_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_2"
        android:textColorHint="#aaaaaa"
        android:textColor="@color/shop_black"
        android:textSize="@dimen/text_big_x"
        android:hint="输入取消理由"
        android:maxLines="1"
        android:maxLength="12"
        android:background="@null"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        />

    <LinearLayout
        android:id="@+id/dell_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/left_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="左按钮"
            android:textSize="@dimen/text_big_x"
            android:textColor="@color/light_black"
            />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_line"
            />

        <TextView
            android:id="@+id/right_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="右按钮"
            android:textSize="@dimen/text_big_x"
            android:textColor="@color/shop_red"
            />
    </LinearLayout>
</LinearLayout>

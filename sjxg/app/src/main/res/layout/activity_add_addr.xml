<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjhj.sjxg.activity.addr.AddAddrActivity"
    android:background="@color/background_gray"
    android:orientation="vertical"
    >

    <include
        layout="@layout/lay_header"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:gravity="center_vertical"
        android:background="@color/shop_white"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="收货人"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal"
            android:paddingLeft="@dimen/margin_10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:hint="请输入收货人名称"
            android:textColorHint="@color/light_black"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:gravity="center_vertical"
        android:background="@color/shop_white"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="联系电话"
            />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal"
            android:paddingLeft="@dimen/margin_10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:inputType="number"
            android:hint="请输入联系电话"
            android:textColorHint="@color/light_black"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        />

    <LinearLayout
        android:id="@+id/area_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:gravity="center_vertical"
        android:background="@color/shop_white"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="所在地区"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            >

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"
                android:layout_marginLeft="@dimen/margin_10dp"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:background="@color/shop_white"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        >

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="3"
            android:ellipsize="end"
            android:background="@null"
            android:hint="详细地址"
            android:gravity="top|left"
            android:textColorHint="@color/dark_gray"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:background="@color/shop_white"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="设置默认地址"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/shop_black"
            android:layout_gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/defaultIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/sel"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="com.zjhj.sjxg.activity.ForgetActivity"
    android:orientation="vertical">

    <include
        layout="@layout/lay_header"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="@dimen/text_big_x"
            android:textStyle="bold"
            android:textColor="@color/shop_black"
            android:layout_marginLeft="@dimen/margin_2"
            />

        <EditText
            android:id="@+id/name_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_2"
            android:hint="仅支持中国大陆手机号"
            android:textColorHint="@color/light_black"
            android:textSize="@dimen/text_big"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            />

        <ImageView
            android:id="@+id/clear_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/clear_gray"
            android:paddingLeft="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            android:visibility="gone"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="@dimen/text_big_x"
            android:textStyle="bold"
            android:textColor="@color/shop_black"
            android:layout_marginLeft="@dimen/margin_2"
            />

        <EditText
            android:id="@+id/code_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_2"
            android:hint="请输入验证码"
            android:textColorHint="@color/light_black"
            android:textSize="@dimen/text_big"
            android:background="@null"
            android:maxLength="6"
            />

        <ImageView
            android:id="@+id/clear_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/clear_gray"
            android:paddingLeft="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/request_code"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="获取验证码"
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_yellow"
            android:layout_marginRight="@dimen/margin_2"
            android:gravity="center"
            android:background="@drawable/rect_solid_white_stroke_yellow"
            android:minWidth="110dp"
            android:paddingLeft="@dimen/margin_1"
            android:paddingRight="@dimen/margin_1"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        />

    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:text="绑定"
        android:textColor="@color/shop_white"
        android:textSize="@dimen/text_big_x"
        android:gravity="center"
        android:background="@drawable/selector_pressed_color_red_round_5"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_2"
        />

</LinearLayout>

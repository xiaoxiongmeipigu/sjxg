<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/item_sel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/sel"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/background_gray"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_10dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_small"
                android:textColor="@color/shop_black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¥:"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/shop_red"
                    />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_big_xx"
                    android:textColor="@color/shop_red"
                    android:layout_marginLeft="7dp"
                    />

            </LinearLayout>
        </LinearLayout>

        <com.zjhj.sjxg.view.PurcaseSheetLayout
            android:id="@+id/purcaseSheetLayout"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            />

    </LinearLayout>

</LinearLayout>
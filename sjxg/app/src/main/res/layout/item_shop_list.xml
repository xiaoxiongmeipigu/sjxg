<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_solid_color_white_stroke_divider_one"
        android:orientation="vertical"
        android:padding="@dimen/margin_2"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_1"
        android:id="@+id/root_view"
        >

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嘉兴三季小购001店"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_big_x"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话：0593-234234234"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_normal"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/margin_2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="昌盛南路1234号"
                android:textColor="@color/light_black"
                android:textSize="@dimen/text_normal"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="@dimen/text_normal"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="0.98km"
                android:layout_marginLeft="@dimen/margin_1"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@color/shop_white"
    >

    <CheckBox
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="44dp"
        android:background="@drawable/selector_menu_cb_color_red"
        android:textColor="@drawable/selector_menu_cb_text_color_red"
        android:textSize="@dimen/text_normal"
        android:text=""
        android:button="@null"
        android:gravity="center"
        android:id="@+id/root_view"
        >

    </CheckBox>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/shop_white"
        />

</LinearLayout>
